<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PhotoJobApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PhotoJobApp"
    Title="PhotoJobApp">

    <Shell.MenuBarItems>
        <MenuBarItem Text="Account">
            <MenuFlyoutItem Text="Sign Out" Clicked="OnSignOutClicked" />
        </MenuBarItem>
    </Shell.MenuBarItems>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
