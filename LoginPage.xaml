<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoJobApp.LoginPage"
             Title="Sign In">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header -->
        <StackLayout Grid.Row="0" Margin="0,50,0,30">
            <Label Text="Photo Job Manager" 
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Center"/>
            <Label Text="Sign in to manage your photo jobs" 
                   Style="{StaticResource BodyText}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>
        </StackLayout>

        <!-- Login Form -->
        <StackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center">
            <Frame Padding="20" CornerRadius="15" HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="Email" Style="{StaticResource SubHeadline}"/>
                    <Entry x:Name="EmailEntry" 
                           Placeholder="Enter your email"
                           Keyboard="Email"
                           Text="{Binding Email}"/>
                    
                    <Label Text="Password" Style="{StaticResource SubHeadline}"/>
                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Enter your password"
                           IsPassword="True"
                           Text="{Binding Password}"/>
                    
                    <Button Text="Sign In" 
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Clicked="OnSignInClicked"
                            Margin="0,20,0,0"/>
                    
                    <Button Text="Sign Up" 
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            BorderColor="{StaticResource Primary}"
                            BorderWidth="1"
                            Clicked="OnSignUpClicked"/>
                    
                    <Label Text="OR" 
                           HorizontalOptions="Center"
                           Style="{StaticResource CaptionText}"
                           Margin="0,20,0,0"/>
                    
                    <Button Text="Sign in with Google" 
                            BackgroundColor="#4285F4"
                            TextColor="White"
                            Clicked="OnGoogleSignInClicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>

        <!-- Footer -->
        <StackLayout Grid.Row="2" Margin="0,20,0,0">
            <Label Text="Don't have an account?" 
                   Style="{StaticResource CaptionText}"
                   HorizontalOptions="Center"/>
            <Button Text="Create Account" 
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    Clicked="OnCreateAccountClicked"/>
        </StackLayout>
    </Grid>

</ContentPage> 