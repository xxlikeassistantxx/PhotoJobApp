<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoJobApp.AddEditJobTypePage"
             xmlns:models="clr-namespace:PhotoJobApp.Models"
             x:DataType="models:JobType"
             Title="{Binding Id, StringFormat='Edit Job Type', TargetNullValue='New Job Type'}"
             BackgroundColor="#F0F0F0">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">

            <Frame Padding="15" CornerRadius="10" BackgroundColor="White">
                <StackLayout Spacing="10">
                    <Label Text="Basic Information" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Name *"/>
                    <Entry Text="{Binding Name}" Placeholder="e.g., Wedding Photography"/>
                    <Label Text="Description"/>
                    <Editor Text="{Binding Description}" Placeholder="A short description of this job type" HeightRequest="80" AutoSize="TextChanges"/>
                    <Label Text="Icon"/>
                    <Entry Text="{Binding Icon}" Placeholder="e.g., ðŸ“·"/>
                    <Label Text="Color"/>
                    <Picker Title="Select Color" SelectedItem="{Binding Color}">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>#FF6B6B</x:String>
                                <x:String>#4ECDC4</x:String>
                                <x:String>#45B7D1</x:String>
                                <x:String>#96CEB4</x:String>
                                <x:String>#FFEAA7</x:String>
                                <x:String>#DDA0DD</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </StackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="10" BackgroundColor="White">
                <StackLayout Spacing="10">
                    <Label Text="Enabled Features" FontSize="18" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                        <Label Grid.Row="0" Grid.Column="0" Text="Include Photos" VerticalOptions="Center"/>
                        <Switch Grid.Row="0" Grid.Column="1" IsToggled="{Binding HasPhotos}" OnColor="#512BD4"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="Include Location" VerticalOptions="Center"/>
                        <Switch Grid.Row="1" Grid.Column="1" IsToggled="{Binding HasLocation}" OnColor="#512BD4"/>
                        <Label Grid.Row="2" Grid.Column="0" Text="Include Client Information" VerticalOptions="Center"/>
                        <Switch Grid.Row="2" Grid.Column="1" IsToggled="{Binding HasClientInfo}" OnColor="#512BD4"/>
                        <Label Grid.Row="3" Grid.Column="0" Text="Include Pricing" VerticalOptions="Center"/>
                        <Switch Grid.Row="3" Grid.Column="1" IsToggled="{Binding HasPricing}" OnColor="#512BD4"/>
                        <Label Grid.Row="4" Grid.Column="0" Text="Include Due Date" VerticalOptions="Center"/>
                        <Switch Grid.Row="4" Grid.Column="1" IsToggled="{Binding HasDueDate}" OnColor="#512BD4"/>
                        <Label Grid.Row="5" Grid.Column="0" Text="Include Status" VerticalOptions="Center"/>
                        <Switch Grid.Row="5" Grid.Column="1" IsToggled="{Binding HasStatus}" OnColor="#512BD4"/>
                        <Label Grid.Row="6" Grid.Column="0" Text="Include Notes" VerticalOptions="Center"/>
                        <Switch Grid.Row="6" Grid.Column="1" IsToggled="{Binding HasNotes}" OnColor="#512BD4"/>
                        <Label Grid.Row="7" Grid.Column="0" Text="Include Urgent Flag" VerticalOptions="Center"/>
                        <Switch Grid.Row="7" Grid.Column="1" IsToggled="{Binding HasUrgentFlag}" OnColor="#512BD4"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <Frame Padding="15" CornerRadius="10" BackgroundColor="White">
                <StackLayout Spacing="10">
                    <Label Text="Status Options" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Enter status options separated by commas." FontSize="12" TextColor="#666666"/>
                    <Editor Text="{Binding StatusOptions}" Placeholder="e.g., Pending, In Progress, Completed" HeightRequest="60" AutoSize="TextChanges"/>
                </StackLayout>
            </Frame>

            <CollectionView ItemsSource="{Binding CustomFieldsList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:CustomField">
                        <Frame Margin="0,5" Padding="10" CornerRadius="5">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                    <Label FontSize="12" TextColor="#666666">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Type, StringFormat='Type: {0}'}"/>
                                                <Span Text=" | "/>
                                                <Span Text="{Binding Required, StringFormat='Required: {0}'}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>
                                <Button Grid.Column="1" Text="ðŸ—‘ï¸" BackgroundColor="Transparent" TextColor="Red" Clicked="OnDeleteCustomFieldClicked" CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Custom Field Button -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="White">
                <StackLayout Spacing="10">
                    <Label Text="Custom Fields" FontSize="18" FontAttributes="Bold"/>
                    <Button Text="+ Add Custom Field" 
                            Clicked="OnAddCustomFieldClicked"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            CornerRadius="5"/>
                </StackLayout>
            </Frame>

            <!-- Save and Cancel Buttons -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="White">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                    <Button Text="Save" 
                            Clicked="OnSaveClicked"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            WidthRequest="120"
                            CornerRadius="5"/>
                    <Button Text="Cancel" 
                            Clicked="OnCancelClicked"
                            BackgroundColor="Gray"
                            TextColor="White"
                            WidthRequest="120"
                            CornerRadius="5"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage> 