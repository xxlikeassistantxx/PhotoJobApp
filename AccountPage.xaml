<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoJobApp.AccountPage"
             Title="Account">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Header -->
        <StackLayout Grid.Row="0" Margin="0,20,0,30">
            <Label Text="Account Settings" 
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Center"/>
            <Label Text="Manage your account and preferences" 
                   Style="{StaticResource BodyText}"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>
        </StackLayout>

        <!-- Account Options -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="15">
                <!-- User Info Section -->
                <Frame Padding="20" CornerRadius="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="ðŸ‘¤ User Information" 
                               Style="{StaticResource SubHeadline}"
                               FontAttributes="Bold"
                               Margin="0,0,0,15"/>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                            <Label Text="Email:" 
                                   Style="{StaticResource BodyText}"
                                   FontAttributes="Bold"
                                   WidthRequest="80"/>
                            <Label x:Name="UserEmailLabel" 
                                   Text="Loading..." 
                                   Style="{StaticResource BodyText}"/>
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                            <Label Text="Member since:" 
                                   Style="{StaticResource BodyText}"
                                   FontAttributes="Bold"
                                   WidthRequest="80"/>
                            <Label x:Name="MemberSinceLabel" 
                                   Text="January 2024" 
                                   Style="{StaticResource BodyText}"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Subscription Section -->
                <Frame Padding="20" CornerRadius="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="ðŸ’Ž Subscription" 
                               Style="{StaticResource SubHeadline}"
                               FontAttributes="Bold"
                               Margin="0,0,0,15"/>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                            <Label Text="Current Plan:" 
                                   Style="{StaticResource BodyText}"
                                   FontAttributes="Bold"
                                   WidthRequest="100"/>
                            <Label x:Name="CurrentPlanLabel" 
                                   Text="Free Plan" 
                                   Style="{StaticResource BodyText}"
                                   TextColor="Green"/>
                        </StackLayout>
                        
                        <Button Text="Upgrade to Premium" 
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                CornerRadius="10"
                                Margin="0,15,0,0"
                                Clicked="OnUpgradeClicked"/>
                    </StackLayout>
                </Frame>

                <!-- Preferences Section -->
                <Frame Padding="20" CornerRadius="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="âš™ï¸ Preferences" 
                               Style="{StaticResource SubHeadline}"
                               FontAttributes="Bold"
                               Margin="0,0,0,15"/>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                            <Label Text="Theme:" 
                                   Style="{StaticResource BodyText}"
                                   FontAttributes="Bold"
                                   WidthRequest="80"/>
                            <Picker x:Name="ThemePicker" 
                                    Title="Select Theme"
                                    WidthRequest="150"
                                    HorizontalOptions="Start">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Auto</x:String>
                                        <x:String>Light</x:String>
                                        <x:String>Dark</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,15,0,0">
                            <Label Text="Notifications:" 
                                   Style="{StaticResource BodyText}"
                                   FontAttributes="Bold"
                                   WidthRequest="100"/>
                            <Switch x:Name="NotificationsSwitch" 
                                    IsToggled="True"
                                    HorizontalOptions="Start"/>
                        </StackLayout>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,15,0,0">
                            <Label Text="Sync Job Types:" 
                                   Style="{StaticResource BodyText}"
                                   FontAttributes="Bold"
                                   WidthRequest="100"/>
                            <Switch x:Name="SyncJobTypesSwitch" 
                                    IsToggled="True"
                                    HorizontalOptions="Start"
                                    Toggled="OnSyncJobTypesToggled"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Legal Information Section -->
                <Frame Padding="20" CornerRadius="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="ðŸ“‹ Legal Information" 
                               Style="{StaticResource SubHeadline}"
                               FontAttributes="Bold"
                               Margin="0,0,0,15"/>
                        
                        <Button Text="Privacy Policy" 
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="1"
                                CornerRadius="10"
                                Margin="0,5,0,0"
                                Clicked="OnPrivacyPolicyClicked"/>
                        
                        <Button Text="Terms of Service" 
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="1"
                                CornerRadius="10"
                                Margin="0,10,0,0"
                                Clicked="OnTermsOfServiceClicked"/>
                        
                        <Label Text="Version 1.0.0" 
                               Style="{StaticResource BodyText}"
                               HorizontalOptions="Center"
                               TextColor="Gray"
                               Margin="0,15,0,0"/>
                    </StackLayout>
                </Frame>

                <!-- Account Actions Section -->
                <Frame Padding="20" CornerRadius="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="ðŸ”§ Account Actions" 
                               Style="{StaticResource SubHeadline}"
                               FontAttributes="Bold"
                               Margin="0,0,0,15"/>
                        
                        <Button Text="Export Data" 
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="1"
                                CornerRadius="10"
                                Margin="0,5,0,0"
                                Clicked="OnExportDataClicked"/>
                        
                        <Button Text="Sign Out" 
                                BackgroundColor="Red"
                                TextColor="White"
                                CornerRadius="10"
                                Margin="0,15,0,0"
                                Clicked="OnSignOutClicked"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage> 