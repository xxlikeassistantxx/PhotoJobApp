<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoJobApp.ForgotPasswordPage"
             Title="Reset Password">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20">
            <!-- Header -->
            <StackLayout Grid.Row="0" Margin="0,40,0,30">
                <Label Text="Reset Password" 
                       Style="{StaticResource Headline}"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>
                <Label Text="Enter your email to receive a password reset link" 
                       Style="{StaticResource BodyText}"
                       HorizontalOptions="Center"
                       TextColor="Gray"/>
            </StackLayout>

            <!-- Reset Password Form -->
            <StackLayout Grid.Row="1" Spacing="25" VerticalOptions="Center" Margin="0,20,0,20">
                <Frame Padding="25" CornerRadius="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout Spacing="20">
                        <!-- Email Section -->
                        <StackLayout Spacing="8">
                            <Label Text="Email Address" 
                                   Style="{StaticResource SubHeadline}"
                                   FontAttributes="Bold"/>
                            <Entry x:Name="EmailEntry" 
                                   Placeholder="Enter your email address"
                                   Keyboard="Email"
                                   HeightRequest="50"
                                   Margin="0,5,0,0"/>
                        </StackLayout>
                        
                        <!-- Reset Password Button -->
                        <Button Text="Send Reset Link" 
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="10"
                                Clicked="OnSendResetLinkClicked"
                                Margin="0,15,0,0"/>
                        
                        <!-- Status Message -->
                        <StackLayout x:Name="StatusLayout" IsVisible="False" Margin="0,10,0,0">
                            <Label x:Name="StatusLabel" 
                                   Text=""
                                   TextColor="Green"
                                   HorizontalOptions="Center"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>
                        </StackLayout>
                        
                        <!-- Back to Login Button -->
                        <Button Text="Back to Sign In" 
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="1"
                                HeightRequest="50"
                                CornerRadius="10"
                                Clicked="OnBackToLoginClicked"/>
                    </StackLayout>
                </Frame>
            </StackLayout>

            <!-- Footer -->
            <StackLayout Grid.Row="2" Margin="0,30,0,20">
                <Label Text="Remember your password?" 
                       Style="{StaticResource CaptionText}"
                       HorizontalOptions="Center"
                       TextColor="Gray"
                       Margin="0,0,0,10"/>
                <Button Text="Sign In" 
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        HeightRequest="40"
                        Clicked="OnBackToLoginClicked"/>
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage> 